<%= form_with model: @base do |form| %>
          <table class="table table-bordered table-condensed table-hover" id="table-attendances">
            <tr>
              <th><%= form.label :base_number, '拠点番号' %></th>
              <td><%= form.text_field :base_number %></td>
            </tr>
            
            <tr>
              <th><%= form.label :base_name, '拠点名' %></th>
              <td><%= form.text_field :base_name %></td>
            </tr>
            <tr>
              <th><%= form.label :base_type, '拠点タイプ' %></th>
              <td><%= form.select :base_type, [['出勤', 0],['退勤', 1]] %></td>
            </tr>
            <tr>
        
              <td colspan="2"><%= form.submit "修正内容を保存", class:"btn btn-primary btn-sm" %></td>
            </tr>
          </table>
        <% end %>