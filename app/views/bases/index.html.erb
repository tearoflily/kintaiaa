<table class="table table-bordered table-condensed table-hover" id="table-attendances">
	<tbody>
		<tr>
			<th></th>
			<th></th>
			<th>拠点番号</th>
			<th>拠点名</th>
			<th>拠点種類</th>
		</tr>
		
		<% if @bases.present? %>
  		<% @bases.each do | base | %>
    		<tr>
    			<td><%= link_to '編集ボタン', edit_basis_path(base.id), class:"btn btn-primary btn-sm" %></td>
    			<td><%= link_to '削除ボタン', basis_path(base.id), method: :delete, class:"btn btn-primary btn-sm" %></td>
    			<td><%= base.base_number %></td>
    			<td><%= base.base_name %></td>
    			<td><%= base_type(base.base_type) %></td>
    		</tr>
  		<% end %>
  	<% end %>
	</tbody>
</table>






<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" href="#collapse1">拠点追加のボタン</a>
      </h4>
    </div>
    <div id="collapse1" class="panel-collapse collapse">
      <div class="panel-body">
        <%= form_with model: @base_create do |form| %>
          <table class="table table-bordered table-condensed table-hover" id="table-attendances">
            <tr>
              <th><%= form.label :base_number, '拠点番号' %></th>
              <td><%= form.text_field :base_number %></td>
            </tr>
            
            <tr>
              <th><%= form.label :base_name, '拠点名' %></th>
              <td><%= form.text_field :base_name %></td>
            </tr>
            <tr>
              <th><%= form.label :base_type, '拠点種類' %></th>
              <td><%= form.select :base_type, [['出勤', 0],['退勤', 1]] %></td>
            </tr>
            <tr>
        
              <td colspan="2"><%= form.submit "新規登録", class:"btn btn-primary btn-sm" %></td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
